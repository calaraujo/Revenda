@model Revenda.Models.ConsignmentsDetail

@*@{ 
    ViewBag.Title = "Add Product";
}

<h2>Add Product</h2>*@

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @*<h4>Order</h4>
        <hr />*@
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ConsignmentId)

    <div class="form-group">
        @Html.LabelFor(model => model.ConsignmentsDetailId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ConsignmentsDetailId, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.ConsignmentsDetailId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ReturnQuantity, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ReturnQuantity, new { htmlAttributes = new { @class = "form-control integer", @required = "true",
                        @oninvalid = "setCustomValidity('Informe a quantidade')", @oninput = "setCustomValidity('')" } } )
            @Html.ValidationMessageFor(model => model.ReturnQuantity, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Inserir" class="btn-primary btn-sm" />
            @Html.ActionLink("Voltar", "HitConsignment", new { id = Model.ConsignmentId }, new { @class = "btn btn-success btn-sm" })
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/Mascaras")
}
