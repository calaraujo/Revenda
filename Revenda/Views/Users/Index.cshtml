@model PagedList.IPagedList<Revenda.Models.User>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}

<h2>Usuários</h2>

<p>
    @Html.ActionLink("Novo", "Create", new { }, new { @class = "btn-primary btn-sm" }) &nbsp;
    @Html.ActionLink("Lista", "ReportForm", new { }, new { @class = "btn-warning btn-sm" })
</p>
<table class="table table-condensed table-striped">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().City.Name)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Company.Name)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Estado.Name)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Phone)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Complement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Neighborhood)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Photo)
        </th>
        <th>Ações</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.City.Name)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Company.Name)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Estado.Name)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Complement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Neighborhood)
            </td>*@
            <td>
                @if (!string.IsNullOrEmpty(item.Photo))
                {
                    <img src="@Url.Content(item.Photo)" alt="Image" style="width:70px;height:70px;max-width: 100%; height: auto;" />
                }
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.UserId }, new { @class = "btn btn-warning btn-sm" })
                @Html.ActionLink("Detalhes", "Details", new { id = item.UserId }, new { @class = "btn btn-info btn-sm" })
                @Html.ActionLink("Excluir", "Delete", new { id = item.UserId }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }

</table>
    Página : @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new
{
    page,
    sortOrder =
    ViewBag.CurrentSort,
    currentFilter = ViewBag.CurrentFilter
}))
