@{
    ViewBag.Title = "Home Page";
}

<div class="page-header">
    <h1 class="text-center">Marcela Acessórios</h1>
    <p class="text-center">Grande variedade de peças. Atendimento personalizado. </p>
</div>

@using System.IO
@using System.Collections

<div class="container">
    @{ string[] filePaths = Directory.GetFiles(Server.MapPath("~/Content/Products/"));
        ArrayList files = new ArrayList();
        foreach (var filePath in filePaths)
        {
            files.Add("Content/Products/" + Path.GetFileName(filePath));
        }
    }
    <div class="col-md-3">

    </div>
    <div class="col-md-6">
        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="background:transparent !important">
            <!-- Indicators -->

            <!-- Wrapper for slides -->
            <div class="carousel-inner" style="background:transparent !important">
                @{
                    for (int i = 0; i < files.Count; i++)
                    {
                        if (i == 0)
                        {

                            <div class="item active text-center">
                                <img src="@(files[i].ToString())" alt="" style="text-align:center;width:100%;height:380px">
                            </div>

                        }
                        else
                        {

                            <div class="item text-center">
                                <img src="@(files[i].ToString())" alt="" style="text-align:center;width:100%;height:380px">
                            </div>

                        }
                    }
                }
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="col-md-3">

    </div>

</div>


