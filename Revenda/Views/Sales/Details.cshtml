@model Revenda.Models.Sale

@{
    ViewBag.Title = "Details";
}

<h2>Detalhes</h2>

<div>
    <div class="col-md-6">
        <div>
            <h4>Venda</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Company.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Company.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Customer.FullName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Customer.FullName)
                </dd>

                @*<dt>
                        @Html.DisplayNameFor(model => model.Sale.Remarks)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Order.Remarks)
                    </dd>*@

                <dt>
                    @Html.DisplayNameFor(model => model.Condition.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Condition.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Seller.FullName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Seller.FullName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Warehouse.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Warehouse.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Date)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Date)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Remarks)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Remarks)
                </dd>

            </dl>
        </div>
        <p>
            @Html.ActionLink("Editar", "Edit", new { id = Model.SaleId }, new { @class = "btn btn-warning btn-sm" })
            @Html.ActionLink("Voltar", "Index", new { }, new { @class = "btn btn-success btn-sm" })
        </p>
    </div>
    <div class="col-md-6">
        <h4>Contas a Receber</h4>
        <hr />
        @if (Model.Receivables.Count == 0)
            {
            <h5>Nenhuma Conta a Pagar registrada.</h5>
        }
        else
        {
            <table class="table">
                <tr>
                    <th>
                        Venda
                    </th>
                    <th>
                        Código
                    </th>
                    <th>
                        Data
                    </th>
                    <th>
                        Status Pgto.
                    </th>
                    <th>
                        Status Vencto.
                    </th>
                </tr>

                @foreach (var item in Model.Receivables.ToList())
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SaleId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReceivableId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>                   
                        <td>
                            @Html.DisplayFor(modelItem => item.Payment)
                        </td>                        
                    </tr>
                }
            </table>
        }
    </div>
</div>